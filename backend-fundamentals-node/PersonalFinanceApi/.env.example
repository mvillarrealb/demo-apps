# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Options: 'postgres' or 'sqlite'
DB_DIALECT=sqlite

# PostgreSQL Configuration (only needed if DB_DIALECT=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=personal_finance_db
DB_USER=postgres
DB_PASSWORD=postgres

# SQLite Configuration (only needed if DB_DIALECT=sqlite)
DB_STORAGE=./database.sqlite

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
